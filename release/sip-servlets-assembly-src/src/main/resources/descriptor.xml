<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>restcomm-sip-servlets-${project.version}-src</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/../</directory>
            <outputDirectory>/restcomm/servers/sip-servlets</outputDirectory>
            <includes>
                <include>**/pom.xml</include>
                <include>**/sip-servlets-annotations/**</include>
                <include>**/docs/**</include>
                <include>**/sip-servlets-application-router/**</include>
                <include>**/sip-servlets-bootstrap/**</include>
                <include>**/containers/**</include>
                <include>**/sip-servlets-client/**</include>
                <include>**/sip-servlets-core-api/**</include>
                <include>**/sip-servlets-examples/**</include>
                <include>**/sip-servlets-impl/**</include>
                <include>**/sip-servlets-jruby/**</include>
                <include>**/management/**</include>
                <include>**/sip-servlets-spec/**</include>
            </includes>
            <excludes>
                <exclude>**/mobicents-skin/**</exclude>
                <exclude>**/sip-servlets-bootstrap/src/site/**</exclude>
                <exclude>**/sip-servlets-impl/null/**</exclude>
                <exclude>**/www/**</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/design-docs/**</exclude>
                <exclude>**/legacy/**</exclude>
                <exclude>**/release/**</exclude>
                <exclude>**/logs/**</exclude>
                <exclude>**/tests/**</exclude>
                <exclude>**/build/**</exclude>
                <exclude>**/GWT/**</exclude>
                <exclude>**/${*}/**</exclude>
                <exclude>**/*JBOSS_HOME*/**</exclude>
                <exclude>**/*CATALINA_HOME*/**</exclude>
                <exclude>**/.gwt-cache/**</exclude>
                <exclude>**/.settings/**</exclude>
                <exclude>**/.project</exclude>
                <exclude>**/.classpath</exclude>
                <exclude>**/*.class</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>