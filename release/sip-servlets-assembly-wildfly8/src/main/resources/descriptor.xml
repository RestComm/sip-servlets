<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>restcomm-sip-servlets-${project.version}-wildfly-${assembly.wf8.version}</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/dependency/wildfly-${assembly.wf8.version}</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/dependency/sip-servlets-as8-drop-in-${project.version}/modules/system/layers/base/org/mobicents</directory>
            <outputDirectory>/modules/system/layers/base/org/mobicents</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/dependency/mms</directory>
            <outputDirectory>/mobicents-media-server</outputDirectory>
        </fileSet>

    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/dependency/clicktocall/click-to-call-servlet-${project.version}.war</source>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <destName>click2call.war</destName>
        </file>
        <file>
            <source>${project.build.directory}/dependency/websocketb2bua/websockets-sip-servlet-${project.version}.war</source>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <destName>websockets-sip-servlet.war</destName>
        </file>
        <file>
            <source>${project.build.directory}/dependency/jsr309/media-jsr309-servlet-${project.version}.war</source>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <destName>media-jsr309-servlet.war</destName>
        </file>
        <file>
            <source>${project.build.directory}/dependency/sipservletsmanagement/sip-servlets-management-${project.version}.war</source>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <destName>sip-servlets-management.war</destName>
        </file>
        <file>
            <source>${project.build.directory}/dependency/jolokia/jolokia-war-${assembly.jolokia.version}.war</source>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <destName>jolokia.war</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/../sip-servlets-examples/websocket-b2bua/websocket-dar.properties</source>
            <outputDirectory>/standalone/configuration/dars</outputDirectory>
            <destName>mobicents-dar.properties</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/../sip-servlets-examples/websocket-b2bua/websocket-dar.properties</source>
            <outputDirectory>/domain/configuration/dars</outputDirectory>
            <destName>mobicents-dar.properties</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/resources/mss-sip-stack.properties</source>
            <outputDirectory>/standalone/configuration</outputDirectory>
        </file>
        <file>
            <source>${project.parent.basedir}/resources/mss-sip-stack.properties</source>
            <outputDirectory>/domain/configuration</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/src/main/resources/assembly-resources/wildfly-8-standalone-conf</source>
            <outputDirectory>/bin</outputDirectory>
            <destName>standalone.conf</destName>
        </file>
        <file>
            <source>${project.parent.basedir}/../containers/sip-servlets-as8-drop-in/jboss-as-restcomm/standalone-sip.xml</source>
            <outputDirectory>/standalone/configuration</outputDirectory>
        </file>
    </files>
</assembly>